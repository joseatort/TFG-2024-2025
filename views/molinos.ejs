<div id="molinos">

    <div id="modoEdicion">

        <h5 class="fw-bold">Add Wind Turbine</h5>
        <form id="formCreateAerogenerador">
            <input type="hidden" name="granja" value="<%= nombreGranja %>">
            <p class="p-0 m-0">
                <small for="recommend" class="form-label fw-bold instrucciones">
                    1- Position yourself where you want to place the wind turbine<br>
                    2- Select its rated power <br>
                    3- Click on the map, where it will be placed (it must be in the green zone)
                </small>
            </p>
            <label for="potenciaNominal" class="form-label mt-2">Rated power</label>
            <select name="potenciaNominal" id="potenciaNominal" class="form-control bg-transparent text-white">
                <option value="" selected disabled>- Select an option -</option>
                <option value="15">15 MW (Offshore)</option>
                <option value="5">5 MW (Onshore)</option>
            </select>
        </form>

        <button class="exit-button" id="cancelarEdicion">
            <svg height="20px" viewBox="0 0 384 512">
              <path
                d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"
              ></path>
            </svg>
          </button>
    </div>

    <div id="molinosPanel" class="molinos-panel" data-granja="<%= nombreGranja %>">
        <div class="px-3 pt-2 d-flex gap-5 justify-content-between align-items-center">


            <h5 class="d-flex align-items-center justify-content-center gap-2">
                <span class="material-symbols-rounded">
                    wind_power
                </span>
                Wind Turbines List - <%= nombreGranja %>
            </h5>
            
            <button class="close-panel-btn" onclick="togglePanelMolinos()">✕</button>
        </div>
        <div class="panel-body d-flex gap-1 flex-column">
            <% if (molinos.length > 0) { %>
                <% molinos.forEach((molino, index) => { %>
                    <div class="card" id="molino-<%= molino.idMolino %>" onclick="movimientos('<%= molino.pos.lat %>',' <%= molino.pos.long %>', null)">
                        <div class="mt-2">
                            <span class="fw-bold fs-5">Wind Turbine <%= index + 1 %></span><br>
                            <span>Latitude: <%= parseFloat(molino.pos.lat).toFixed(4) %> Longitude: <%= molino.pos.long.toFixed(4) %></span><br>
                        </div>
                        <form class="formEliminarMolino my-2">
                            <input type="hidden" name="idMolino" value="<%= molino.idMolino %>">
                            <input type="hidden" name="nombreGranja" value="<%= nombreGranja %>">
                            <button type="submit" class="btnEliminar btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"></path>
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"></path>
                                  </svg>
                            </button>
                        </form>
                    </div>
                <% }); %>
            <% } %>
    
            <!-- Botón para añadir un nuevo molino -->
            <div class="card">
                <button class="botonAnimado btn-add-molino">
                    <svg xmlns="http://www.w3.org/2000/svg" width="50px" height="50px" viewBox="0 0 24 24">
                        <path d="M12 22C17.5 22 22 17.5 22 12C22 6.5 17.5 2 12 2C6.5 2 2 6.5 2 12C2 17.5 6.5 22 12 22Z" stroke-width="1.5"></path>
                        <path d="M8 12H16" stroke-width="1.5"></path>
                        <path d="M12 16V8" stroke-width="1.5"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</div>